<form class="database_search" action="/inventory/search" method="get">

  <legend>Search Albums</legend>
    <input type="text" name="search_pattern"/>
  <button type="submit">Search</button>

</form>

 
<form class="inventory_actions" id="search_stock" action="/inventory/stock" method="get">
  <legend>Search Stock</legend>
  <input type="hidden" name="account_balance" value="@inventory.account_balance"/>

  <select name="id">
    <% @inventory.albums.each do |album| %>
    <option value="<%= album.id %>"><%= album.title %></option>
    <% end %>
  </select>

  <button type="submit">See Stocked Album</button>
</form>


<form class="inventory_actions" id="buy_stock" action="/inventory/buy" method="post">
  <legend>Buy Stock</legend>
  <input type="hidden" name="account_balance" value="@inventory.account_balance"/>

  <select name="album_id">
    <% @stock_views.each do |stock_item| %>
        <option value="<%= stock_item.album_id %>"><%= stock_item.album_title %></option>
    <% end %>
  </select>
  
  <label>Quantity:</label>
  <input type="number" name="quantity" required/>

  <button type="submit">Buy Stock</button>

</form>



<form class="inventory_actions" id="sell_stock" action="/inventory/sell" method="post">
  <legend>Sell Stock</legend>
  <input type="hidden" name="account_balance" value="@inventory.account_balance"/>

  <select name="album_id">
    <% @stock_views.each do |stock_item| %>
        <option value="<%= stock_item.album_id %>"><%= stock_item.album_title %></option>
    <% end %>
  </select>
  
  <label>Quantity:</label>
  <input type="number" name="quantity" required/>

  <button type="submit">Sell Stock</button>

</form>










  